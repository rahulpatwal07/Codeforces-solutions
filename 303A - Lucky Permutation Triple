#include <bits/stdc++.h>
using namespace std;

#define IOS                  \
    ios::sync_with_stdio(0); \
    cin.tie(0);              \
    cout.tie(0);
#define endl "\n"
#define ll long long

void solve(){ 
    ll n;cin>>n;
    
    if(n%2==0){
        cout<<"-1\n";
        return ;
    }
    for (int i = 0; i < n; i++){
        cout<<i<<" ";
    }
    cout<<endl;
    for (int i = 0; i < n; i++){
        cout<<(i+1)%n<<" ";
    }
    cout<<endl;
    for (int i = 0; i < n; i++){
        cout<<(2*i + 1)%n<<" ";
        
    }
    cout<<endl;
    
    
    
}

int32_t main(){
    IOS;
