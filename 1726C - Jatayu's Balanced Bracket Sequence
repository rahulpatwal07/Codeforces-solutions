#include <bits/stdc++.h>
using namespace std;

#define IOS                  \
    ios::sync_with_stdio(0); \
    cin.tie(0);              \
    cout.tie(0);
#define endl "\n"
#define ll long long

void solve(){
    int n;cin>>n;
    string s;cin>>s;
   int cnt = 0;
    for(int i=0; i<s.length()-1; i++){
        if(s[i]=='(' && s[i+1]==')'){
            cnt++;
        }
    }
    cout<<n-cnt+1<<endl;

}

int32_t main(){
    IOS;
    ll t;
    cin>>t;
    while(t--){
    solve();
    }

    return 0;
}
