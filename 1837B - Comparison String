#include <bits/stdc++.h>
using namespace std;
 
#define IOS                  \
    ios::sync_with_stdio(0); \
    cin.tie(0);              \
    cout.tie(0);
#define endl "\n"
#define ll long long
 
 
void solve(){
   int n;cin>>n;
   string s;cin>>s;
   int i = 0;
   int mx = 0;
   while(i<n){
        int cnt = 1;
        char ch = s[i];
        i++;
        while(s[i]==ch){
            cnt++;
            i++;
        }
        mx = max(cnt+1,mx);
   }
   cout<<mx<<endl;
   
   
    
}
 
int32_t main(){
    IOS;
    ll t;
    cin>>t;
    while(t--){
    solve();
    }
 
    return 0;
}
