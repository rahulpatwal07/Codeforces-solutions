#include <bits/stdc++.h>
using namespace std;

#define IOS                  \
    ios::sync_with_stdio(0); \
    cin.tie(0);              \
    cout.tie(0);
#define endl "\n"
#define ll long long


void solve(){
    int a,b;cin>>a>>b;
    if((a+b)%3!=0){
        cout<<"NO\n";
        return ;
    }
    int qut = (a+b)/3;
    int d = abs(a-b);
    if(d >  qut ){
        cout<<"NO\n";
        return ;
    }
    cout<<"YES\n";
    
}

int32_t main(){
    IOS;
    ll t;
    cin>>t;
    while(t--){
    solve();
    }

    return 0;
}
