#include <iostream>
#include <queue>
#include <algorithm>
#include <vector>
using namespace std;
#define ll long long
 
void solve(){
    ll n,mx=-1,ans=0;cin>>n;
    for(ll i=1;i<=n;++i){
        ll x;cin>>x;
        mx=max(mx,x);
        if(mx==i)++ans;
    }
    cout<<ans<<endl;
    
 
    
}
int main(){
    ll t;cin>>t;
    while (t--){
        solve();
    }
    return 0;
}
