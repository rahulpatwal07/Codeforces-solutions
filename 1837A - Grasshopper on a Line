#include <bits/stdc++.h>
using namespace std;
 
#define IOS                  \
    ios::sync_with_stdio(0); \
    cin.tie(0);              \
    cout.tie(0);
#define endl "\n"
#define ll long long
 
 
void solve(){
   int x,k;cin>>x>>k;
   if(x%k==0){
    cout<<2<<endl;
    cout<<x-1<<" "<<1<<endl;
   }
   else{
    cout<<1<<endl;
    cout<<x<<endl;
   }
   
   
    
}
 
int32_t main(){
    IOS;
    ll t;
    cin>>t;
    while(t--){
    solve();
    }
 
    return 0;
}
