#include <bits/stdc++.h>
using namespace std;

#define IOS                  \
    ios::sync_with_stdio(0); \
    cin.tie(0);              \
    cout.tie(0);
#define ll long long
ll cnt = 0;


void solve(){
    long long n;cin>>n;
    long long ans = 0;
    while(n>0){
        ans += n;
        n/=2;
    }
    cout<<ans<<endl;

}

int32_t main(){
    IOS;
    ll t;
    cin>>t;
    while(t--){
    solve();
    }
    return 0;
}
