    cout.tie(0);
#define endl "\n"
#define ll long long

void solve(){
    int n;cin>>n;
    vector<int> v(3,0);
    for (int i = 0; i < n; i++){
        int a;cin>>a;
        v[a%3]++;
    }
    int ans = v[0]/2;
    ans += min(v[1],v[2]);
    cout<<ans<<endl;

    
}

